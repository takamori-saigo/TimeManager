                    <Label Text="01.04 - 07.04" Margin="217,-42,0,0" FontSize="20" FontAttributes="Bold" TextColor="#82A8DF"/>
                    <ScrollView Margin="0,15" VerticalScrollBarVisibility="Never">
                        <StackLayout Margin="0,0,0,0">
                            <Frame x:Name="firstDate" Margin="0,15,0,10" HeightRequest="55" CornerRadius="30">
                                <StackLayout>
                                    <Button Clicked="addTask1_Clicked" Margin="90,-23,-20,0" HeightRequest="100" BackgroundColor="Transparent"/>
                                    <BoxView HeightRequest="110" CornerRadius="30" BackgroundColor="#FEB4CB" Margin="-30,-110,225,0"/>
                                    <Label Text="1" Margin="15,-100,0,0" FontSize="35" TextColor="#9B6C7A" FontAttributes="Bold"/>
                                    <Label Text="апр" Margin="5,-20,0,0" FontSize="35" TextColor="#9B6C7A" FontAttributes="Bold"/>
                                </StackLayout>
                            </Frame>
                            <Frame x:Name="secondDate" Margin="0,10,0,10" HeightRequest="55" CornerRadius="30">
