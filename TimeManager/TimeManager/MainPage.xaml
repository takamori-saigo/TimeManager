<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImageSource="mainPage.png"
             x:Class="TimeTrack.MainPage">
    <StackLayout>
        <Label Text="Отслеживайте время и управляйте задачами легко!"  Margin="35,400, 0, 0" FontSize="40" FontAttributes="Bold" HorizontalTextAlignment="Start" TextColor="White"/>
        <Button Clicked="moveNext_Clicked" Text="Давайте начнем" TextColor="White" BorderWidth="2" BorderColor="White" HeightRequest="60" Margin="35, 55, 35 ,0" CornerRadius="50" BackgroundColor="Transparent"/>
        <Button x:Name="moveNext" Clicked="moveNext_Clicked" HeightRequest="60" CornerRadius="50" Margin="300, -66, 35, 0" BackgroundColor="Transparent" BorderColor="White" BorderWidth="2" ImageSource="arrow.png"/>
    </StackLayout>
    

</ContentPage>
